 .animated-box {
      width: 100px;
      height: 100px;
      background: blue;
      margin: 50px;
      animation: slide 3s ease-in-out infinite;
    }

    /* Keyframes define the animation */
    @keyframes slide {
      0%   { transform: translateX(0); background: blue; }
      50%  { transform: translateX(150px); background: green; }
      100% { transform: translateX(0); background: blue; }
    }
     .animated-box button {
      padding: 8px 15px;
      border: none;
      background: yellow;
      color: black;
      font-weight: bold;
